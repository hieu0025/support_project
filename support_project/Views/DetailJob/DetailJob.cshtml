@model support_project.Context.cong_ty
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Website title - bootstrap html template</title>

    <link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- jQuery -->
    <script src="~/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- custom javascript -->
    <script src="~/Content/js/script.js" type="text/javascript"></script>

</head>
<body>
    <section class="py-3 bg-light">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("index", "Home")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Company", "Company")">Công ty thực tập</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chi tiết công ty</li>
            </ol>
        </div>
    </section>

    <section class="section-content bg-white padding-y">
        <div class="container">
            <div class="row">
                <aside class="col-md-6">
                    <div class="card">
                        <article class="gallery-wrap">
                            <div class="img-big-wrap">
                                <div> <a href="#"><img src="~/Content/images/@Model.anh"></a></div>
                            </div> <!-- slider-product.// -->
                        </article> <!-- gallery-wrap .end// -->
                    </div> <!-- card.// -->
                </aside>
                <main class="col-md-6">
                    <article class="product-info-aside">

                        <h2 class="title mt-3">@Model.ten_cong_ty</h2>
                        <div class="mb-3">
                            <label class="">@Model.dia_chi</label>
                        </div>
                        <div class="mb-3">
                            <label class="">@Model.sdt</label>
                        </div>
                        <div class="mb-3">
                            <label class="">@Model.email</label>
                        </div>
                        <div class="mb-3">
                            <label class="">@Model.chuyen_nganh</label>
                        </div>
                        <p>
                            @Model.mo_ta
                        </p>
                        <div class="form-row  mt-4">
                            <div class="form-group col-md">
                                <a href="@Url.Action("Create", "Student")" class="btn  btn-primary">
                                    <i class="fas fa-envelope"></i> <span class="text">Nộp hồ sơ</span>
                                </a>
                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- container .//  -->
    </section>
</body>
</html>