@model support_project.Context.sach

@{
    ViewBag.Title = "Edit";
}
<style>
    .width-text-box {
        width: 160px;
    }

    textarea#mo_ta {
        width: 925px;
        height: 200px;
    }
</style>
<h2>Chỉnh sửa thông tin</h2>

@using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { enctype = "multypart/form-data" }))
{
                @Html.AntiForgeryToken()
<div class="form-horizontal" style="margin-left:20px;">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_sach)

    <div class="form-group">
        <label>Tên sách:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ten_sach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ten_sach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Tác giả:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tac_gia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tac_gia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Nhà xuất bản:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nxb, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nxb, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Ảnh:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.anh, null, new { type = "file", @class = "form-control" })
            <img src="~/Content/images/@Model.anh" width="300px" height="200px" />
            @Html.Hidden("oldimage", @Model.anh)
            @Html.ValidationMessageFor(model => model.anh, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label>Đường dẫn:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.duong_dan, null, new { type = "file", @class = "form-control" })
            
            @Html.Hidden("oldimage", @Model.duong_dan)
            @Html.ValidationMessageFor(model => model.duong_dan, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label>Mô tả:</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.mo_ta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.mo_ta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Tên khoa:</label>
        <div class="col-md-10">
            @Html.DropDownList("id_khoa", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_khoa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
