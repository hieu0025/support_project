@model support_project.Context.sach

@{
    ViewBag.Title = "Create";
}
<style>
    .width-text-box {
        width: 160px;
    }

    textarea#mo_ta {
        width: 925px;
        height: 200px;
    }
</style>
<h2>Thêm mới tài liệu</h2>

@using (Html.BeginForm("Create", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="margin-left:20px;">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Tên sách:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ten_sach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ten_sach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Tác giả:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tac_gia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tac_gia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Nhà xuất bản:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nxb, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nxb, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Ảnh:</label>
        <div class="col-md-10">
            <input type="file" name="ImageUpload" />
        </div>
    </div>
    <div class="form-group">
        <label>Đường dẫn:</label>
        <div class="col-md-10">
            <input type="file" name="FileUpload" />
        </div>
    </div>

    <div class="form-group">
        <label>Mô tả:</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.mo_ta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.mo_ta, "", new { @class = "text-danger" })
            <script>
                CKEDITOR.replaceClass("mo_ta")
            </script>
        </div>
    </div>

    <div class="form-group">
        <label>Tên khoa</label>
        <div class="col-md-10">
            @Html.DropDownList("id_khoa", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_khoa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
